<?xml version="1.0"?>
<ruleset name="Varaa">
    <description>Varaa coding style based on PSR2 with less restriction</description>
    <exclude-pattern>app/views/*</exclude-pattern>
    <exclude-pattern>app/start/*</exclude-pattern>
    <exclude-pattern>app/config/*</exclude-pattern>
    <exclude-pattern>app/storage/*</exclude-pattern>
    <exclude-pattern>app/database/*</exclude-pattern>
    <exclude-pattern>app/tests/_support/*</exclude-pattern>
    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">
        <!-- to disable a single error -->
        <exclude name="PSR2.Namespaces.UseDeclaration.MultipleDeclarations"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
    </rule>
</ruleset>
