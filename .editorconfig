# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[**/*.js]
indent_style = space
indent_size = 2

[**/*.coffee]
indent_style = space
indent_size = 2

[**/*.es6]
indent_style = space
indent_size = 2
